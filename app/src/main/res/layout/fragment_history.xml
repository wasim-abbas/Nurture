<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".views.fragments.mainFragments.HistoryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_32sdp">

            <TextView
                android:id="@+id/txtRecommended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/popin_regular"
                android:text="@string/view_history"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/txtBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/popin_regular"
                android:text="@string/back"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />

            <View
                android:id="@+id/v2"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_2sdp"
                android:elevation="@dimen/_2sdp"
                android:layout_below="@id/txtBack"
                android:outlineProvider="background"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:background="@color/white" />

            <View
                android:layout_width="@dimen/_4sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_below="@id/txtBack"
                android:layout_marginStart="-10dp"
                android:layout_toEndOf="@id/v2"
                android:elevation="@dimen/_2sdp"
                android:outlineProvider="background"
                android:background="@color/white" />

            <View
                android:id="@+id/v1"
                android:layout_width="@dimen/_56sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_below="@id/txtRecommended"
                android:background="@color/white" />

            <View
                android:layout_width="@dimen/_6sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_below="@id/txtRecommended"
                android:layout_marginStart="-16dp"
                android:layout_toEndOf="@id/v1"
                android:background="@color/teal_100" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:drawableStart="@drawable/loading2"
            android:drawablePadding="@dimen/_6sdp"
            android:fontFamily="@font/popin_regular"
            android:text="@string/latest_result"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/lldownloadResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_12sdp"
            app:cardCornerRadius="@dimen/_8sdp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_12sdp"
                android:src="@drawable/download" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/popin_regular"
                android:gravity="start"
                android:text="@string/time"
                android:textColor="@color/dark_pink"
                android:textSize="@dimen/_12ssp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_32sdp"
                android:padding="@dimen/_4sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/popin_regular"
                    android:text="13.2g/dl (Hemoglobin)"
                    android:textColor="@color/teal_500"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_4sdp"
                android:weightSum="5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-50dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/popin_regular"
                    android:gravity="end"
                    android:padding="@dimen/_2sdp"
                    android:text="0"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/popin_regular"
                    android:gravity="end"
                    android:padding="@dimen/_2sdp"
                    android:text="5"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_10ssp" />

                <!--                <TextView-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_weight="1"-->
                <!--                    android:fontFamily="@font/popin_regular"-->
                <!--                    android:gravity="center"-->
                <!--                    android:padding="@dimen/_2sdp"-->
                <!--                    android:text="10"-->
                <!--                    android:textColor="@color/dark_blue"-->
                <!--                    android:textSize="@dimen/_10ssp" />-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/popin_regular"
                    android:gravity="end"
                    android:padding="@dimen/_2sdp"
                    android:text="10"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/popin_regular"
                    android:gravity="end"
                    android:padding="@dimen/_2sdp"
                    android:text="15"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/popin_regular"
                    android:gravity="end"
                    android:padding="@dimen/_2sdp"
                    android:text="20"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_10ssp" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_70sdp"
                android:orientation="vertical"
                android:padding="@dimen/_4sdp">

                <ProgressBar
                    android:id="@+id/progressBAr1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_gravity="start|center_horizontal"
                    android:max="20"
                    android:progress="4"
                    android:progressDrawable="@drawable/rounded_progress" />

                <View
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:background="@drawable/round_ellipse" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_16sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="-6dp"
                android:rotation="180"
                android:src="@drawable/rect1" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginStart="-12dp"
                android:layout_marginTop="-3dp"
                android:layout_marginEnd="-12dp"
                android:background="@color/white" />

            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:src="@drawable/rect1" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_8sdp"
            android:drawableStart="@drawable/loading2"
            android:drawablePadding="@dimen/_6sdp"
            android:fontFamily="@font/popin_regular"
            android:text="@string/old_results"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

        <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/rvHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            tools:itemCount="2"
            tools:listitem="@layout/item_view_history"
           android:layout_marginBottom="@dimen/_12sdp"
            />

    </LinearLayout>

</ScrollView>