<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical"
    tools:context=".views.fragments.mainFragments.ProductDetailFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginVertical="@dimen/_32sdp">

        <TextView
            android:id="@+id/txtRecommended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/popin_regular"
            android:text="@string/recommended_products"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/txtBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/popin_regular"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

        <View
            android:id="@+id/v2"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_2sdp"
            android:layout_below="@id/txtBack"
            android:elevation="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:outlineProvider="background"
            android:layout_alignParentRight="true"
            android:background="@color/white" />

        <View
            android:layout_width="@dimen/_4sdp"
            android:layout_height="@dimen/_2sdp"
            android:layout_below="@id/txtBack"
            android:layout_marginStart="-9dp"
            android:elevation="@dimen/_2sdp"
            android:outlineProvider="background"
            android:layout_toEndOf="@id/v2"
            android:background="@color/white" />

        <View
            android:id="@+id/v1"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_2sdp"
            android:elevation="@dimen/_2sdp"
            android:outlineProvider="background"
            android:layout_below="@id/txtRecommended"
            android:background="@color/white" />

        <View
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_2sdp"
            android:layout_below="@id/txtRecommended"
            android:layout_toEndOf="@id/v1"
            android:layout_marginStart="@dimen/_6sdp"
            android:background="@color/white" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/txtMedicineImage"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Name:"
        android:layout_marginTop="@dimen/_12sdp"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/_12ssp" />

    <TextView
        android:id="@+id/txtMedicineName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/popin_regular"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Web Link:"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/_12ssp" />

    <TextView
        android:id="@+id/txtLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/description2"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/_12ssp" />

    <TextView
        android:id="@+id/txtMedicineDes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:background="@drawable/description_bg"
        android:fontFamily="@font/popin_regular"
        android:padding="@dimen/_8sdp"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/_10ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/_70sdp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="-2dp"
            android:background="@drawable/view_round_bg" />

        <ImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_marginStart="-6dp"
            android:src="@drawable/rect_blue" />


    </LinearLayout>


</LinearLayout>