<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".views.fragments.mainFragments.HomeFragment">

    <View
        android:id="@+id/viewOne"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="2:1.3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewOne">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:drawableStart="@drawable/loadingalt"
            android:drawablePadding="@dimen/_6sdp"
            android:fontFamily="@font/poppins_semibold"
            android:text="new test"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />


        <RelativeLayout
            android:id="@+id/llAddNewTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_8sdp"
            android:background="@drawable/round_btn_bg_white"
            android:gravity="center"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_36sdp"
                android:drawableEnd="@drawable/camera"
                android:drawablePadding="@dimen/_12sdp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="@string/add_new_test"
                android:textColor="@color/teal_500"
                android:textSize="@dimen/_12ssp" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_8sdp"
            android:drawableStart="@drawable/loading2"
            android:drawablePadding="@dimen/_6sdp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/last_test_performed"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_12sdp"
            app:cardCornerRadius="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:padding="@dimen/_4sdp"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/popin_regular"
                    android:text="@string/latest_test_result"
                    android:textColor="@color/dark_pink"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/popin_regular"
                    android:gravity="right"
                    android:text="@string/time"
                    android:textColor="@color/dark_pink"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_28sdp"
                android:padding="@dimen/_4sdp"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/popin_regular"
                    android:text="13.2g/dl (Hemoglobin)"
                    android:textColor="@color/teal_500"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/popin_regular"
                    android:gravity="right"
                    android:text="3g (Iron)"
                    android:textColor="@color/teal_500"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_4sdp"
                android:weightSum="5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/popin_regular"
                    android:gravity="end"
                    android:padding="@dimen/_2sdp"
                    android:text="0"
                    android:layout_marginStart="-50dp"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/popin_regular"
                    android:gravity="end"
                    android:padding="@dimen/_2sdp"
                    android:text="5"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_10ssp" />

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_weight="1"-->
<!--                    android:fontFamily="@font/popin_regular"-->
<!--                    android:gravity="center"-->
<!--                    android:padding="@dimen/_2sdp"-->
<!--                    android:text="10"-->
<!--                    android:textColor="@color/dark_blue"-->
<!--                    android:textSize="@dimen/_10ssp" />-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/popin_regular"
                    android:gravity="end"
                    android:padding="@dimen/_2sdp"
                    android:text="10"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/popin_regular"
                    android:gravity="end"
                    android:padding="@dimen/_2sdp"
                    android:text="15"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/popin_regular"
                    android:gravity="end"
                    android:padding="@dimen/_2sdp"
                    android:text="20"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_10ssp" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_70sdp"
                android:padding="@dimen/_4sdp">

                <ProgressBar
                    android:id="@+id/progressBAr2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_gravity="start|center_horizontal"
                    android:max="20"
                    android:progress="4"
                    android:progressDrawable="@drawable/rounded_progress" />

                <View
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:background="@drawable/round_ellipse" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>