<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nurture" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black2</item>
        <item name="colorPrimaryVariant">@color/teal_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Custom_Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>

    </style>

    <style name="MainButton" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleRippleDefault">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">@color/dark_blue</item>
        <item name="mrl_rippleDuration">350</item>
        <item name="mrl_rippleFadeDuration">75</item>
    </style>


    <style name="StyleRippleCircle" parent="StyleRippleDefault">
        <item name="mrl_rippleRoundedCorners">48dp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Text Size -->
        <item name="android:textSize">@dimen/_10sdp</item>
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/black2</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/black2</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/black2</item>
    </style>

    <style name="CategorySpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/white</item>

    </style>

</resources>